<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewholder_notes_date"
        android:id="@+id/viewholder_notes_photo"
        tools:src="@drawable/ic_baseline_add_circle_24"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <TextView
        android:id="@+id/viewholder_notes_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        tools:text="This is title"
        android:layout_margin="@dimen/project_margin_default_16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/viewholder_notes_description"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:textSize="14sp"
        tools:text="This is long description"
        android:layout_margin="@dimen/project_margin_default_16dp"
        app:layout_constraintTop_toBottomOf="@+id/viewholder_notes_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/viewholder_notes_date"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:textSize="14sp"
        tools:text="12.10.2021"
        android:layout_margin="@dimen/project_margin_default_16dp"
        app:layout_constraintTop_toBottomOf="@+id/viewholder_notes_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>