<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textview_fragment_enter_text"
        android:textColor="#ff0000"
        android:textSize="14sp"
        android:text="@string/main_activity_welcome_message"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>

    <Button
        android:id="@+id/button_fragment_enter_press"
        android:textColor="#ff0000"
        android:text="Press me!"
        app:layout_constraintTop_toBottomOf="@+id/textview_fragment_enter_text"
        android:layout_marginStart="@dimen/project_margin_default_16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>